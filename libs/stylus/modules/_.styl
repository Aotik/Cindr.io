.logo
    text-align center
    padding 0 0 5rem 0
    img
        max-height 6.7rem
        pointer-events none
    +below('m')
        padding 0 0 2.6rem 0
        img
            max-height 6rem
.head
    text-align center
    padding 7rem 0 5rem 0
    position fixed
    background-color #363C49
    width 100%
    height 100vh
    max-height 100%
    h1
        display inline-block
        font-family font-family-heading
        text-transform uppercase
        -webkit-text-fill-color transparent
        -webkit-background-clip text
        background-size cover
        background-image linear-gradient(80deg, #f57342, #e34b66)
        font-size 5.4rem
        font-weight 800
        line-height 1.2em
    p
        margin 1.4rem 0
        color #fff
    .chevron-down
        margin-top 10rem
        cursor pointer
        svg
            fill #e34b66
    +below('m')
        padding 3rem 0 0 0
        h1
            font-size 3rem
        .button
            display block
            & + .button
                margin 1.4rem 0 0 0 !important
        .chevron-down
            display none
.wrapper
    background-color #fff
    top 100vh
    position relative
    z-index 300

.timeline
    text-align center
    max-width 100%
    overflow hidden
    &::before
        height 200px
        width 2px
        background-color border-grey
        content ' '
        display block
        left calc(50% - 1px)
        position relative
        margin 5rem 0
    span
        font-weight 800
        font-size 1.4rem
        color darken(text-grey, 20%)
        display block
    h1
        font-size 5.4rem
        font-weight 800
        color color-primary
        display inline-block
        font-family font-family-heading
        text-transform uppercase
        -webkit-text-fill-color transparent
        -webkit-background-clip text
        background-size cover
        line-height 1.2em
        margin .8rem 0
    .tag
        position relative
        display block
        margin-bottom 1.4rem
        b
            margin-top -1rem
            display inline-block
            font-size 1.4rem
            line-height 1.3em
            font-weight 600
            padding .3rem .5rem
            z-index -1
            position relative
            color darken(text-grey, 20%)
            font-family font-family-heading
            text-transform uppercase
    &.t
        &-idea
            h1
                background-image linear-gradient(80deg, #ca3fe4, #ff0160)
        &-plan
            h1
                background-image linear-gradient(80deg, #e1e26c, #09b1bd)
        &-design
            h1
                background-image linear-gradient(80deg, #95cbf9, #5851af)
        &-develop
            h1
                background-image linear-gradient(80deg, #ff89d5, #ffd225)
        &-feedback
            h1
                background-image linear-gradient(80deg, #75caca, #3ee2ec)
        &-you
            h1
                background-image linear-gradient(80deg, #f57342, #e34b66)
    +below('m')
        h1
            font-size 3.6rem
        .button
            display block
.button
    text-decoration none
    font-size 1.2rem
    padding 0.9rem 2.5rem
    height auto
    line-height 1.4em
    background linear-gradient(180deg, #f16c4b, #ff0591)
    color #fff
    will-change transform, box-shadow
    transition all 140ms ease
    box-shadow 0px 3px 9px 1px rgba(243, 102, 83, 0.3), 0px 5px 10px 5px rgba(254, 8, 142, 0.1)
    &:hover
        color #fff
        transform translate3d(0, -4px, 0)
        box-shadow 0px 3px 9px 1px rgba(243, 102, 83, 0.45), 0px 5px 10px 5px rgba(254, 8, 142, 0.25)
.button-group
    margin 3rem 0 0 0
    display block
    .button + .button
        margin-left 2rem

.footer
    text-align center
    padding 9rem 0
    small
        color color-grey
        padding 1rem 0
        display block

.side
    fixed top left
    padding 2rem 2.4rem
    display none
    img
        height 3rem
