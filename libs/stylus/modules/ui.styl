*
  box-sizing border-box

global-reset()

html
  height 100%
  width 100%

body
  font-family font-family-standard
  font-size font-size-standard
  color text-grey
  height 100%
  width 100%
  margin 0
  padding 0
  overflow hidden

for h in (1..6)
  h{h}
    line-height 1.5em
    font-size lookup('font-size-h' + h)
    letter-spacing -.01em
    font-weight 500

::selection
  color #fff
  background-color lighten(primary-color, 30%)

a
  color color-primary
  text-decoration underline
  cursor pointer
  &:hover
    color darken(color-primary, 10%)

p
  line-height 1.6em
  font-size 1.2em

b, strong, .strong
  font-weight 600

small
  font-size font-size-small

.stars
    fixed top left
    width 100%
    height 100%
    z-index 100
    pointer-events none

.star
    display block
    width 4px
    height 4px
    border-radius 50%
    background #FFF
    top 80vh
    left 10vw
    position relative
    transform-origin 100% 0
    animation star-ani 15s infinite ease
    animation-direction normal
    opacity 0
    will-change transform, opacity
    &:after
        content ''
        position absolute
        top -4px
        left 1px
        border 4px solid
        border-width 2px 150px 2px 150px
        border-color transparent transparent transparent #FFF
        transform rotate(135deg) translate3d(-1px, 1px, 0)
        transform-origin 0% 100%
        animation shooting-ani 30s infinite linear
        animation-direction  normal
        will-change transform, opacity

.s-white
    animation-delay 4s

.s-yellow
    top 30vh
    left 60vw
    background #ffd225
    animation star-ani-right 10s infinite ease
    animation-delay 12s
    &:after
        transform rotate(225deg) translate3d(-1px, 1px, 0)
        animation shooting-ani-right 10s infinite linear
        border-color transparent transparent transparent #ffd225
        animation-delay 12s

.s-primary
    top 100vh
    left 30vw
    background #e34b66
    animation-delay 8s
    &:after
        border-color transparent transparent transparent #e34b66
        animation-delay 8s

@keyframes shooting-ani
  0%
    transform scale(0.5) rotate(135deg) translate(0px, 1px)
  50%
    transform scale(1) rotate(135deg) translate(0px, 0px)
  100%
    transform scale(0.5) rotate(135deg) translate(0px, -1px)


@keyframes shooting-ani-right
  0%
    transform scale(0.5) rotate(225deg) translate(0px, 1px)
  50%
    transform scale(1) rotate(225deg) translate(0px, 0px)
  100%
    transform scale(0.5) rotate(225deg) translate(0px, -1px)


@keyframes star-ani-right
  0%
    opacity 0
    transform scale(0) rotate(0) translate3d(0, 0, 0)
  10%
    opacity 1
  20%
    opacity 0
    transform scale(1) rotate(0) translate3d(50vh, 50vh, 0)
  100%
    opacity 0

@keyframes star-ani
  0%
    opacity 0
    transform scale(0) rotate(0) translate3d(0, 0, 0)
  10%
    opacity 1
  20%
    opacity 0
    transform scale(1) rotate(0) translate3d(100vh, -100vh, 0)
  100%
    opacity 0
